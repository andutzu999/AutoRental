<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D36335"
    tools:context="com.upb.carrental.Auto.MainMenu">

    <ImageView
        android:id="@+id/motorcycle"
        android:layout_width="130dp"
        android:layout_height="150dp"
        android:layout_marginTop="125dp"
        android:layout_marginLeft="240dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/motorcycle"

        />

    <ImageView
        android:id="@+id/car"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="40dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/car"

        />

    <ImageView
        android:id="@+id/van"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="40dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/van"

        />

    <ImageView
        android:id="@+id/caravan"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="240dp"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/caravan"

        />

    <TextView
        android:id = "@+id/text3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Time to choose"
        android:textColor="#000000"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:textSize = "0.2in"
        android:textStyle = "bold"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="220dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/rounded"
        android:text="Map"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize = "0.15in"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="220dp"
        android:layout_marginBottom="70dp"
        android:background="@drawable/rounded"
        android:text="Settings"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize = "0.15in"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="130dp"
        android:layout_marginLeft="130dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded"
        android:text="History"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize = "0.15in"/>


</RelativeLayout>